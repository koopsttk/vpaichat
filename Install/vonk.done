{
	"rol": "startobject",
	"id": "00000000-0000-0000-0000-000000000001",
	"titel": "VPAICore - Bootstrapvonk",
	"omschrijving": "Eerste installatie: schrijf ini.json, core_fields.json en startobject.json. Hernoem mij daarna.",
	"instructions": "Start altijd hier. Beleid/alias in dit object; technische bindings in ini.json; DNA in contracts/core_fields.json.",
	"bootstrap": {
		"mode": "first-run",
		"write_files": [
			{ "target": "/config/ini.json", "source": "$.ini_json" },
			{ "target": "/config/contracts/core_fields.json", "source": "$.core_fields_contract" },
			{ "target": "/data/startobject.json", "source": "$.startobject_payload" }
		],
		"post_actions": [
			{ "action": "rename_self", "to": "/data/bootstrapvonk.applied.json" }
		]
	},

	"ini_json": {
		"paths": {
			"data_dir": "/data",
			"config_dir": "/config",
			"docs_dir": "/docs",
			"public_dir": "/public",
			"logs_dir": "/logs",
			"scratch_dir": "/workspace/scratch",
			"startobject_file": "/data/startobject.json"
		},
		"api": { "provider": "env", "ref": "OPENAI_API_KEY" },
		"ssot.core": {
			"id_field": "id",
			"date_field": "created_at_utc",
			"version_field": "version",
			"timezone": "UTC",
			"filename_pattern": "{iso8601_utc}Z_{uuid}.json"
		},
		"security": {
			"allowed_roots": "/data,/docs,/public,/workspace/scratch",
			"deny_path_escape": true,
			"max_file_size_mb": 50
		},
		"chat": {
			"max_input_length": 1000,
			"allowed_chars": "^[\\w\\s.,!?@#\\-]+$",
			"min_input_length": 2,
			"max_lines": 5,
			"allow_links": false,
			"allow_unicode": true,
			"require_question": false,
			"block_repeated_chars": true,
			"max_word_length": 30,
			"allow_commands": true,
			"enable_forbidden_words": true
		},
		"development": {
			"dev.openDevTools": true
		},
		"ai_config": {
			"defaultModel": "gpt-4o-mini",
			"aiTemperature": 0.3,
			"taal": "nl-NL",
			"ui": {
				"theme": "light",
				"showTimestamp": true
			}
		}
	},

	"core_fields_contract": {
		"contract_version": "1.0.0",
		"required_fields": ["id", "created_at_utc", "version"],
		"filename_pattern": "{iso8601_utc}Z_{uuid}.json",
		"uuid_version": "v4",
		"timestamp": { "zone": "UTC", "millis": false },
		"versioning": { "type": "semver", "initial": "1.0.0" },
		"immutables": ["id", "created_at_utc"],
		"on_mismatch": "fail"
	},

	"startobject_payload": {
		"rol": "startobject",
		"id": "00000000-0000-0000-0000-000000000001",
		"DatasetOmschrijving": "SSOT Dataset Villa ProCtrl.",
		"omschrijving": "Proto installatie",
		"instructions": "Je bent de regiekamer/verkeerstoren. Start altijd vanaf hier.",
		"prompt": {
			"header": [
				"Je bent de regiekamer van deze installatie.",
				"Spreek Nederlands, kort en concreet.",
				"Respecteer dit moederobject en de grenzen daarin.",
		      "Gebruik SSOTâ€‘objecten; vraag door bij ontbrekende context."
    ]
  },
  
  "keywords": [
    "startobject",
    "framework",
    "start"
  ],
  "aliases": [
    "root",
    "moederobject"
  ]
	}
}
